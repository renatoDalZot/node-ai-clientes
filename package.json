{
  "name": "clientes-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "prepare:postgres": "cp prisma/schema.postgres.prisma prisma/schema.prisma && npx prisma generate",
    "prepare:sqlite": "cp prisma/schema.sqlite.prisma prisma/schema.prisma && npx prisma generate",
    "start:dev": "cp .env.dev .env && npm run start",
    "start:postgres": "cp prisma/schema.postgres.prisma prisma/schema.prisma && npx prisma generate && cp .env.postgres .env && npm run start",
    "start:sqlite": "cp prisma/schema.sqlite.prisma prisma/schema.prisma && npx prisma generate && cp .env.test .env && npm run start",
    "migrate:dev": "cp .env.dev .env && npx prisma migrate deploy",
    "migrate:test": "cp .env.test .env && npx prisma db push",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "cross-env NODE_ENV=test dotenv -e src/.env -- jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "cp prisma/schema.sqlite.prisma prisma/schema.prisma && npx prisma generate && cross-env NODE_ENV=test dotenv -e .env.test -- jest --config ./test/jest-e2e.json",
    "test:e2e-postgres": "cp prisma/schema.postgres.prisma prisma/schema.prisma && npx prisma generate && cross-env NODE_ENV=test dotenv -e .env -- jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@prisma/client": "^6.8.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "pg": "^8.16.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "underscore": "^1.13.7"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.1.3",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "prisma": "^6.8.2",
    "source-map-support": "^0.5.21",
    "sqlite3": "^5.1.7",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  }
}
